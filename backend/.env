APP_NAME=PDF文档处理系统
APP_VERSION=1.0.0
DEBUG=True

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./app.db

# 文件存储配置
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
TEMP_DIR=./temp
MAX_UPLOAD_SIZE=52428800  # 50MB

# 允许的文件类型
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,doc,docx,ofd,zip,rar

# CORS 配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# OCR / 布局解析
ENABLE_OCR=true
OCR_PROVIDER=paddle
OCR_USE_GPU=false
LAYOUTLM_MODEL_NAME=microsoft/layoutlmv3-base
